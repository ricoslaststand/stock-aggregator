{
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
        "@domain/*": ["./domain/*"],
        "@db/*": ["./db/*"],
        "@repository/*": ["./repository/*"],
        "@service/*": ["./service/*"],
        "@utils/*": ["./utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
